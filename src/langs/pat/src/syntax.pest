WHITESPACE = _{ " " | "\t" | NEWLINE }

COMMENT = _{ ("//" ~ (!NEWLINE ~ ANY)* ~ NEWLINE) | "/*" ~ (!"*/" ~ ANY)* ~ "*/" }

sep = _{ "_" | "-"}

id = @{ ASCII_ALPHA+ ~ (sep | ASCII_ALPHA | ASCII_DIGIT)* }

val_bin = { ASCII_BIN_DIGIT+ }

val_hex = { ASCII_HEX_DIGIT+ }

val_dec = { ("+" | "-")? ~ ASCII_DIGIT+ }

val = { "0b" ~ val_bin | "0x" ~ val_hex | val_dec }

int = @{ ASCII_ALPHA_LOWER ~ ASCII_DIGIT+ }

bool = @{ ASCII_ALPHA_LOWER+ }

vector = @{ ASCII_ALPHA_LOWER ~ ASCII_DIGIT+ ~ "<" ~ ASCII_DIGIT+ ~ ">" }

ty = ${ vector | int | bool }

var = { id ~ ":" ~ ty | id }

tup_var = { (var ~ ("," ~ var)*)? }

tup_val = { (val ~ ("," ~ val)*)? }

io = { var | "(" ~ tup_var ~ ")" }

attr = _{ "[" ~ tup_val ~ "]" }

prim = { "??" | id }

hint = _{ "@" ~ prim }

op_prim = { "reg" |
            "sram" |
            "srom" |
            "ram" |
            "rom" |
            "add" |
            "sub" |
            "mul" |
            "not" |
            "and" |
            "or" |
            "xor" |
            "mux" |
            "eq" |
            "neq" |
            "gt" |
            "lt" |
            "ge" |
            "le" }

op_wire = { "id" |
            "const" |
            "sll" |
            "srl" |
            "sra" |
            "ext" |
            "cat" }

op_call = { id }

op = _{ op_prim | op_wire | op_call }

instr = { io ~ "=" ~ op ~ attr? ~ io? ~ hint? ~ ";" }

body = { instr+ }

sig = { "pat" ~ id ~ io? ~ "->" ~ io? }

pat = { sig ~ "{" ~ body? ~ "}" }

target = { pat+ }

file = { SOI ~ target ~ EOI }
